<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Welcome, {{user.username}}!</h2>
    <a href="/items/add" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Add New Item
    </a>
  </div>

  {{#if items.length}}
    <div class="row">
      {{#each items}}
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-header bg-{{#if (eq category 'lost')}}warning{{else}}success{{/if}}">
              <h5 class="card-title mb-0">{{title}}</h5>
            </div>
            <div class="card-body">
              <p class="card-text">{{description}}</p>
              <p class="text-muted"><i class="bi bi-geo-alt"></i> {{location}}</p>
              <div class="d-flex justify-content-between">
                <a href="/items/edit/{{_id}}" class="btn btn-sm btn-outline-secondary">Edit</a>
                <form action="/items/{{_id}}?_method=DELETE" method="POST" class="d-inline">
  <button type="submit" class="btn btn-sm btn-outline-danger" 
          onclick="return confirm('Are you sure you want to delete this item?')">
    <i class="bi bi-trash"></i> Delete
  </button>
</form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">
      <i class="bi bi-info-circle"></i> You haven't reported any items yet.
      <a href="/items/add" class="alert-link">Report your first item</a>
    </div>
  {{/if}}
</div>